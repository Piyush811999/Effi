<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="2dp"
    >



    <android.support.v7.widget.CardView

        android:layout_margin="2dp"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="2dp"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:background="#DDD"

                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:fontFamily="sans-serif-smallcaps"
                    android:id="@+id/day"
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:paddingLeft="14dp"
                    android:text="Day"
                    android:textColor="@color/primaryColor"
                    android:textSize="40sp"
                    />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:layout_above="@+id/textActivity"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="45dp"
                    android:text="Free Hours : " />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/textActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/day"
                    android:layout_alignBottom="@+id/day"
                    android:layout_alignEnd="@+id/description"
                    android:text="Activities : " />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/freehoursCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/description"
                    android:layout_alignBottom="@+id/description"
                    android:layout_toEndOf="@+id/textActivity"
                    android:text="8"
                    android:textColor="@color/colorPrimaryDark" />

                <TextView
                    android:visibility="invisible"
                    android:id="@+id/numberOfActivity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textActivity"
                    android:layout_alignBottom="@+id/textActivity"
                    android:layout_alignStart="@+id/freehoursCount"
                    android:text="8"
                    android:textColor="@color/colorPrimaryDark" />
            </RelativeLayout>
        </LinearLayout>






    </android.support.v7.widget.CardView>
</RelativeLayout>